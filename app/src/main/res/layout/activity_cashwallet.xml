<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudGray"
    android:orientation="vertical">

    <com.betterda.shoppingsale.widget.NormalTopBar
        android:id="@+id/topbar_cashwallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.betterda.shoppingsale.widget.NormalTopBar>
    <View

        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lv_divider"></View>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="现金余额(元)"
                    android:textColor="@color/shouye_renmen_tv"
                    android:textSize="@dimen/textsize_little" />


                <TextView
                    android:id="@+id/tv_wallet2_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:text="1000"
                    android:textColor="@color/shouye_fenlei_red"
                    android:textSize="64dp" />

            </LinearLayout>


            <View

                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lv_divider"></View>



            <RelativeLayout
                android:layout_marginTop="5dp"
                android:id="@+id/relative_wallet2_chongzhi"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/iv_wallet2_chongzhi"
                    android:layout_width="21dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/tixian" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_wallet2_chongzhi"
                    android:text="提现"
                    android:textColor="@color/shouye_renmen_tv" />


                <ImageView
                    android:id="@+id/iv_my_jiantou2"
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/jiantou" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lv_divider"></View>


        </LinearLayout>

        <com.betterda.mylibrary.LoadingPager
            android:id="@+id/loadpager_cashwallet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.betterda.mylibrary.LoadingPager>

    </FrameLayout>
</LinearLayout>
