<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudGray"
    android:orientation="vertical">

    <com.betterda.shoppingsale.widget.NormalTopBar
        android:id="@+id/topbar_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.betterda.shoppingsale.widget.NormalTopBar>


    <RelativeLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_corner_white_gray"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_register_number"
            android:layout_width="16dp"
            android:layout_height="23dp"
            android:background="@mipmap/phone"
            />


            <EditText
                android:layout_marginLeft="10dp"
                android:inputType="phone"
                android:textSize="@dimen/textsize_little"
                android:id="@+id/et_register_number"
                android:layout_toRightOf="@id/iv_register_number"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入手机号"

                />

    </RelativeLayout>

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_corner_white_gray"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:background="@mipmap/yzm"
            />

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textSize="@dimen/textsize_little"
                android:id="@+id/et_register_yzm"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="请输入验证码"


                />

        <com.betterda.mylibrary.view.CountDown
            android:id="@+id/countdown_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </com.betterda.mylibrary.view.CountDown>

    </LinearLayout>

    <RelativeLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_corner_white_gray"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_register_password"
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:background="@mipmap/password"
            />


            <EditText
                android:layout_marginLeft="10dp"
                android:inputType="textPassword"
                android:textSize="@dimen/textsize_little"
                android:id="@+id/et_register_pwd"
                android:layout_toRightOf="@id/iv_register_password"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入6-20位密码"


                />

    </RelativeLayout>

    <RelativeLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_corner_white_gray"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_register_password2"
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:background="@mipmap/password"
            />



            <EditText
                android:inputType="textPassword"
                android:textSize="@dimen/textsize_little"
                android:id="@+id/et_register_pwd2"
                android:layout_toRightOf="@id/iv_register_password2"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请再次输入密码"
                android:layout_marginLeft="10dp"

                />

    </RelativeLayout>


    <Button
        android:id="@+id/btn_register"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape_corner_red"
        android:layout_width="match_parent"
        android:text="注册"
        android:textColor="#ffffff"
        android:layout_height="48dp" />


</LinearLayout>
