<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linear_item_rv_meassage"
    android:orientation="vertical">

    <RelativeLayout
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">


        <ImageView
            android:id="@+id/iv_item_rv_meassage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/zwt_zheng"
            />

        <LinearLayout
            android:id="@+id/linear_item_meassage"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_item_rv_meassage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="10"
                android:id="@+id/tv_item_meassage_title"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/shouye_renmen_tv"
                android:textSize="12sp"
                android:text="通知消息" />

            <TextView
                android:layout_marginRight="10dp"
                android:textColor="@color/shouye_lv_tv"
                android:textSize="12sp"
                android:id="@+id/tv_item_meassage_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-05-05 16:13" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@id/linear_item_meassage"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_item_rv_meassage"
            android:textColor="@color/shouye_lv_tv"
            android:textSize="12sp"
            android:id="@+id/tv_item_meassage_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="买家已付款,请尽快发货" />



    </RelativeLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="0.5dp"

        android:background="@color/lv_divider"></View>
</LinearLayout>