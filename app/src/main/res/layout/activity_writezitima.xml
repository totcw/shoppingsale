<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.betterda.shoppingsale.widget.NormalTopBar
        android:id="@+id/topbar_writezitima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.betterda.shoppingsale.widget.NormalTopBar>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divierLine"
        ></View>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/shape_bottom_top_line"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        >


        <EditText
            android:id="@+id/et_wiritezitima_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入自提码"
            android:minHeight="40dp"
            android:textColor="@color/shouye_renmen_tv"
            android:textSize="10sp" />


    </LinearLayout>


    <Button
        android:id="@+id/btn_writezitima_comfirm"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_corner_red"
        android:layout_width="match_parent"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:text="确认"
        android:layout_height="48dp" />

</LinearLayout>
