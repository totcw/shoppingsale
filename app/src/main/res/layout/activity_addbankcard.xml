<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <com.betterda.shoppingsale.widget.NormalTopBar
        android:id="@+id/topbar_addbankcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.betterda.shoppingsale.widget.NormalTopBar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"

                android:background="@color/lv_divider"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="持卡人      "
                    android:textColor="@color/shouye_renmen_tv"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/et_addbank_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="请输入持卡人姓名"
                    android:textSize="14sp" />

            </LinearLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="0.5dp"

                android:background="@color/lv_divider"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证      "
                    android:textColor="@color/shouye_renmen_tv"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/et_addbank_identity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="请输入身份证号"
                    android:textSize="14sp" />

            </LinearLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="0.5dp"

                android:background="@color/lv_divider"></View>

            <LinearLayout
                android:id="@+id/linear_addbank_bankname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所属银行   "
                    android:textColor="@color/shouye_renmen_tv"
                    android:textSize="14sp" />


                <TextView
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:id="@+id/tv_addbank_bankname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textSize="14sp" />

                <ImageView

                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:background="@mipmap/jiantou" />

            </LinearLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="0.5dp"

                android:background="@color/lv_divider"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="银行卡            "
                    android:textColor="@color/shouye_renmen_tv"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/et_addbank_cardNo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="请输入银行卡卡号"
                    android:textSize="14sp" />

            </LinearLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="0.5dp"

                android:background="@color/lv_divider"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="银行预留手机"
                    android:textColor="@color/shouye_renmen_tv"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/et_addbank_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="请输入预留手机号"
                    android:textSize="14sp" />

            </LinearLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="0.5dp"

                android:background="@color/lv_divider"></View>




            <Button
                android:id="@+id/btn_addbank_next"
                android:background="@drawable/shape_corner_red"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:text="绑定"
                android:textColor="#ffffff"
                android:layout_height="48dp" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>
